{
  "rust-analyzer": {
    "server": {
      "path": "~/.local/bin/rust-analyzer"
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "json",
    "clojure",
    "typescript",
    "javascript",
    "rust",
    "html"
  ],
  "Lua.diagnostics.globals": [
    "vim",
    "clojure",
    "typescript"
  ],
  "prettier.requireConfig": true,
  "coc.preferences.jumpCommand": "tabe",
  "diagnostic-languageserver.linters": {
    "clj_kondo_lint": {
      "command": "clj-kondo",
      "debounce": 100,
      "args": ["--lint", "%filepath"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "clj-kondo",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "clojure": "clj_kondo_lint"
  },
  "languageserver": {
    "ocaml": {
      "command": "ocamllsp",
      "filetypes": ["ml"]
    },
    "flow": {
      "command": "flow",
      "args": ["lsp"],
      "filetypes": ["javascript", "javascriptreact"],
      "initializationOptions": {},
      "requireRootPattern": 1,
      "settings": {},
      "rootPatterns": [".flowconfig"]
    }
  },
  "eslint": {
    "autoFixOnSave": true,
    "workingDirectories": [{ "mode": "auto" }]
  }
}
